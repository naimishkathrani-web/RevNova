# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=revnova_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# Redis Configuration (optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379

# Salesforce Configuration
# Get credentials from Salesforce Connected App
SALESFORCE_CLIENT_ID=your_salesforce_consumer_key_here
SALESFORCE_CLIENT_SECRET=your_salesforce_consumer_secret_here
SALESFORCE_REDIRECT_URI=http://localhost:3000/api/v1/auth/callback

# OpenAI Configuration (for AI field mapping suggestions)
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# JWT Secret for authentication
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=revnova_dev_secret_change_in_production

# CORS Origins (comma-separated, no spaces)
# Add your frontend URLs here
CORS_ORIGIN=http://localhost:5173,http://localhost:3001,https://naimishkathrani-web.github.io

# Development Server Configuration
# Update these for your dev.revnova.in setup
DEV_SERVER_URL=http://dev.revnova.in
DEV_SERVER_PORT=3000

# Logging Level (error, warn, info, debug)
LOG_LEVEL=debug
